<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Light">
    </style>

    <style name="NoTitleTranslucentTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translate</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>


    <style name="BluetoothSet_Text_Style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22px</item>
    </style>
	
	<style name="BluetoothMusic_time_Text_Style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
	
	<style name="BluetoothSet_LetterText_Style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14px</item>
    </style>
	
	<style name="BluetoothKeyPad_StringText_Style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24px</item>
    </style>
	
	<style name="BluetoothKeyPad_StringText1_Style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36px</item>
    </style>
	
	<style name="BluetoothPhonebook_frametext_Style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18px</item>
    </style>
	

    <style name="Dialog_translucent" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    


    <style name="image_button">
        <item name="android:background">#00000000</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="my_checkbox">
        <item name="android:button">@drawable/checkbox_bluetoothphonebook_check</item>
    </style>

</resources>
